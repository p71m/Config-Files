       "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
    },
    "battery": {
	"states": {
	    //"good": 75,
	    "warning": 20,
	    "critical": 5
	},
	"swap-icon-label": true,
	"format": "{capacity}% {icon}",
	"format-full": "{capacity}% {icon}",
	"format-charging": "{capacity}% ÔÉß {icon}",
	"format-plugged": "{capacity}% Ôá¶",
	// "format-alt": "{time} {icon}",
	"format-time": "{H}:{M}",
	// "format-good": "", // An empty format will hide the module
	"format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
	"interval": 1
    },
    "bluetooth": {
	"swap-icon-label": true,
	"format": "Ôäî ({status})",
	"tooltip-format": "{device_enumerate}",
	"on-click": "systemsettings kcm_bluetooth"
    }, 
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "Û∞™•",
        "performance": "Û∞††",
        "balanced": "Û∞™•",
        "power-saver": "Û±§Ö"
      }
    },
    "network": {
    	"swap-icon-label": true, 
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "{essid} ({signalStrength}%) Ôá´",
        "format-ethernet": "Û∞àÄ",
        "tooltip-format": "{ipaddr}/{cidr}",
        "format-linked": "{ifname} (No IP) Û∞àÄ",
        "format-disconnected": "‚ö†",
	"on-click": "nmtui"
        // "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "pulseaudio": {
    	"swap-icon-label": true, 
        "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Û∞ùü {icon}Ôäî {format_source}",
        "format-muted": "Û∞ùü {format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ• ",
            "hands-free": "Û∞ãé",
            "headset": "Û∞ãé",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },
    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/Dokumente/Config-Files/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "custom/power": {
        "format" : "‚èª",
	"tooltip": false,
	"menu": "on-click",
	"menu-file": "$HOME/Dokumente/Config-Files/waybar/power_menu.xml", //Menu file in resources folder
	"menu-actions": {
		"shutdown": "systemctl poweroff",
		"reboot": "systemctl reboot",
		"suspend": "systemctl suspend",
		"exit_session": "hyprctl dispatch exit"
	}
    }
